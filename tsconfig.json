{
  "compilerOptions": {
    /* Base Options */
    "target": "ES2020", // Or newer (e.g., ES2022) depending on your Node version
    "module": "NodeNext", // Use Node's native ES Module support or "CommonJS" if preferred
    "moduleResolution": "NodeNext", // Recommended with "module": "NodeNext"
    "esModuleInterop": true, // Enables compatibility between CommonJS and ES Modules
    "forceConsistentCasingInFileNames": true, // Prevents case-sensitive path issues
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    /* Strict Type-Checking Options */
    "strict": true, // Enable all strict type-checking options
    "skipLibCheck": true, // Skip type checking of declaration files (.d.ts)

    /* Output Options */
    "outDir": "./dist", // Where to output compiled JavaScript
    "rootDir": "./src", // Specifies the root directory of input files

    /* Source Map Options */
    "sourceMap": true, // Generate source map files for debugging

    /* Other helpful options */
    "resolveJsonModule": true, // Allows importing .json files
    "declaration": true, // Generate corresponding '.d.ts' file
    "declarationMap": true // Generate sourcemaps for declaration files
  },
  "include": ["src/**/*", "eslint.config.js"], // Which files TypeScript should compile
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"] // Which files/folders to exclude
}
